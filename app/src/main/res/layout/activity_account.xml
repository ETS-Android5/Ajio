<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_white"
    tools:context=".activity.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_my_account_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_my_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/my_account"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lime_white"
            android:padding="@dimen/dp_20">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_centerVertical="true"
                android:background="@drawable/account_logo_circle">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_account"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_toEndOf="@+id/rl"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/edit"
                android:textColor="@color/teal_200"
                tools:ignore="RelativeOverlap" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/black"
                android:text="@string/sign_in_join"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="@dimen/dp_5"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/customer_care"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/game_zone"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_6"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/notifications"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/return_creation_demo"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/how_to_return"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/how_do_i_redeem_my_coupon"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/terms_and_conditions"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/promotions_terms_and_conditions"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/returns_and_refunds_policy"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/we_respect_your_privacy"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/fees_and_payments"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/who_we_are"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:text="@string/join_our_team"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_chevron_right_" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>