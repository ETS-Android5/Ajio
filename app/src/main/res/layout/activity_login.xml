<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/loginTemplate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/login" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loginTemplate"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/et_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lime_white"
            android:hint="Enter Mobile Number"
            android:padding="15dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mobile_number"
            android:layout_margin="10dp"
            android:text="Use E-mail ID"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or continue with social account"
            android:layout_above="@+id/ll"
            android:layout_margin="20dp"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/ll"
            android:layout_above="@+id/tv_sign_warning"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/img_fb"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:src="@drawable/ic_facebook"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:id="@+id/img_google"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_google"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="By signing up/logging in, I agree to "
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tv_sign_warning"
            android:text="Terms and Conditions."
            android:textColor="@color/teal_200"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>